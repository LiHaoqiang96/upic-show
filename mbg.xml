<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
  PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
  "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>

  <context id="DB2Tables" targetRuntime="MyBatis3">
    
    <commentGenerator>
  		<property name="suppressAllComments" value="true" />
	</commentGenerator>
    
    <!-- 配置数据库连接 -->
    <jdbcConnection driverClass="com.mysql.jdbc.Driver"
        connectionURL="jdbc:mysql://localhost:3306/upic"
        userId="root"
        password="1202">
    </jdbcConnection>

    <javaTypeResolver >
      <property name="forceBigDecimals" value="false" />
    </javaTypeResolver>

	<!-- 指定JavaBean生成位置 -->
    <javaModelGenerator 
    	targetPackage="com.xyz.keshe.pojo" 
    	targetProject=".\src\main\java">
      <property name="enableSubPackages" value="true" />
      <property name="trimStrings" value="true" />
    </javaModelGenerator>

	<!-- 指定SQL映射文件 -->
    <sqlMapGenerator 
    	targetPackage="mapper"  
    	targetProject=".\src\main\resources">
      <property name="enableSubPackages" value="true" />
    </sqlMapGenerator>

	<!-- 指定Dao生成的位置 -->
    <javaClientGenerator type="XMLMAPPER" 
    	targetPackage="com.xyz.keshe.mapper"  
    	targetProject=".\src\main\java">
      <property name="enableSubPackages" value="true" />
    </javaClientGenerator>

	<table tableName="user" domainObjectName="User"></table>
	<table tableName="picmenu" domainObjectName="PicMenu"></table>
	<table tableName="pic" domainObjectName="Pic"></table>

  </context>
</generatorConfiguration>
